{
  "name": "aviation-weather-briefing-backend",
  "version": "1.0.0",
  "description": "Backend API for aviation weather briefing system - processes METAR, TAF, and NOTAM data for pilots",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles --forceExit"
  },
  "keywords": [
    "aviation",
    "weather",
    "metar",
    "taf",
    "notam",
    "flight",
    "briefing"
  ],
  "author": "Aviation Weather Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "detectOpenHandles": true,
    "forceExit": true,
    "collectCoverage": false,
    "verbose": true
  }
}
